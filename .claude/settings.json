{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/load-undecided-topics.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop_hook.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__claude-code-exterminal-memory__add_decision",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/remind_task_on_decision.sh"
          }
        ]
      }
    ]
  }
}
