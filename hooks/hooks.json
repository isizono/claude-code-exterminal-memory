{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -c \"import json, sys; from pathlib import Path; data = json.loads(sys.stdin.read()); sid = data.get('session_id', ''); (Path.home() / '.claude' / '.claude-code-memory' / 'state' / f'prev_topic_{sid}').unlink(missing_ok=True)\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/stop_hook.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__cc-memory__add_decision",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/remind_task_on_decision.sh"
          }
        ]
      }
    ]
  }
}
